#!/bin/bash

# Color definitions
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m' # No Color


# ASCII art banner
BANNER="
  ${RED}····················································${NC}
  ${RED}:  ____                  ____           _ _        :${NC}
  ${RED}: |  _ \  ___  ___ _ __ |  _ \ __ _  __| (_) ___   :${NC}
  ${RED}: | | | |/ _ \/ _ \  _ \| |_) / _  |/ _  | |/ _ \  :${NC}
  ${RED}: | |_| |  __/  __/ |_) |  _ < (_| | (_| | | (_) | :${NC}
  ${RED}: |____/ \___|\___| .__/|_| \_\__,_|\__,_|_|\___/  :${NC}
  ${RED}:                 |_|                              :${NC}
  ${RED}: ${YELLOW}                          ~ by deepotrus${NC}         ${RED}:${NC}
  ${RED}····················································${NC}
"

# Define the radio menu options and corresponding commands
declare -A radio_menu
radio_menu["Ambient"]="ambient.ogg.m3u"
radio_menu["Trance"]="trance.ogg.m3u"
radio_menu["Tronic"]="tronic.ogg.m3u"
radio_menu["Dubstep"]="dubstepfm.ogg.m3u"

# Menu options array for navigation
menu_options=("Trance" "Ambient" "Tronic" "Dubstep" "Quit")
current_selection=0
stations_dir="stations"

# Function to display the radio menu
display_menu() {
  clear
  echo -e "$BANNER"
  echo -e "  ${RED}~~~~ ${NC}${YELLOW}Radio Menu${NC}${RED} ~~~~${NC}"
  
  for i in "${!menu_options[@]}"; do
    if [ $i -eq $current_selection ]; then
      echo -e "  ${BOLD}${CYAN}▶ ${menu_options[$i]}${NC}"
    else
      echo -e "  ${GREEN}  ${menu_options[$i]}${NC}"
    fi
  done
  
  echo -e "  ${RED}~~~~~~~~~~~~~~~~~~~~${NC}"
  echo -e "  ${YELLOW}Use ↑↓ arrows to navigate, Enter to select${NC}"
}

play_radio_stream() {
  clear
  echo -e "$BANNER"
  echo "Playing $1" radio stream...
  mpv "${stations_dir}/${radio_menu[$1]}"
}

# Function to read a single keypress
read_key() {
  local key
  IFS= read -rsn1 key
  case $key in
    $'\x1b')  # ESC sequence
      IFS= read -rsn2 key
      case $key in
        '[A') echo "UP" ;;
        '[B') echo "DOWN" ;;
        *) echo "UNKNOWN" ;;
      esac
      ;;
    '') echo "ENTER" ;;
    *) echo "UNKNOWN" ;;
  esac
}

# Function to handle menu navigation
navigate_menu() {
  while true; do
    display_menu
    key=$(read_key)
    
    case $key in
      "UP")
        if [ $current_selection -gt 0 ]; then
          ((current_selection--))
        else
          current_selection=$((${#menu_options[@]} - 1))
        fi
        ;;
      "DOWN")
        if [ $current_selection -lt $((${#menu_options[@]} - 1)) ]; then
          ((current_selection++))
        else
          current_selection=0
        fi
        ;;
      "ENTER")
        selected_option="${menu_options[$current_selection]}"
        if [ "$selected_option" = "Quit" ]; then
          echo "Goodbye!"
          exit 0
        else
          play_radio_stream "$selected_option"
        fi
        ;;
    esac
  done
}

# Main program
navigate_menu
